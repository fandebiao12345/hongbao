/* pages/editor/editor.wxss */

page {
  background: #faf6f3;
}

.editor {
  width: 702rpx;
  background: #fff;
  border-radius: 8rpx;
  margin-top: 44rpx;
  box-sizing: border-box;
  padding: 25rpx 36rpx 0 36rpx;
}

.write {
  font-size: 36rpx;
  line-height: 45rpx;
  width: 100%;
  height: 100rpx;
}

.tips {
  color: #4a4a4a;
  font-size: 24rpx;
  line-height: 64rpx;
  text-align: right;
  border-bottom: 1rpx solid #9b9b9b;
}

.picVol {
  margin-top: 20rpx;
}

.picVol-item {
  font-size: 24rpx;
  line-height: 64rpx;
  color: #4a4a4a;
  float: left;
  width: 96rpx;
}
.picVol-item image{
  width: 96rpx;
  height: 96rpx;
  border-radius: 4rpx;
}
.vol {
  margin-left: 30rpx;
}



.options {
  display: flex;
  justify-content: space-between;
  background: #fff;
  box-sizing: border-box;
  width: 702rpx;
  padding: 0 36rpx;
  margin-top: 20rpx;
  font-size: 36rpx;
  line-height: 100rpx;
  height: 100rpx;
}

.options-right {
  display: flex;
  align-items: center;
}
.seconds{
  margin-right: -25rpx;
}

.options-right input {
  line-height: 100rpx;
  height: 100rpx;
  text-align: right;
}



.options-right .button {
  width: 40rpx;
  height: 40rpx;
  text-align: center;
  line-height: 36rpx;
  background: #d8d8d8;
  color: #fff;
  border-radius: 50%;
  border: 20rpx solid #fff;
}

.extraMoney{
  color: #9b9b9b;
}
.submit{
  margin-top: 60rpx;
  height: 100rpx;
  line-height: 100rpx;
  background: #d84e43;
  width: 702rpx;
  text-align: center;
  border-radius: 50rpx;
  font-size: 38rpx;
  color: #fff;
}
.need{
  font-size: 20rpx;
  width: 702rpx;
  line-height: 84rpx;
  height: 84rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.icon {
  background-repeat: no-repeat;
  background-size: 24rpx;
  background-position: center;
  width: 24rpx;
  height: 24rpx;
}
.icon-ok{
  background-image: url('https://mini.0315678.cn/red-packet/img/ok.png');
}
.icon-no{
  background-image: url('https://mini.0315678.cn/red-packet/img/no.png');
}
.need .text{
  margin-left: 20rpx;
  color: #d84e43;
}
.tabbar{
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 98rpx;
  background: #fff;
  font-size: 24rpx;
  color: #9b9b9b;
  line-height: 156rpx;
  transition: all 0.3s;
  justify-content: space-between;
}
.tabbar-item{
  width: 360rpx;
  text-align: center;
  background-repeat: no-repeat;
  background-size: 48rpx 48rpx;
  background-position: center 12rpx;
}
.tabbar-left{
  background-image: url('https://mini.0315678.cn/red-packet/img/tabbar-left.png');
}
.tabbar-right{
  background-image: url('https://mini.0315678.cn/red-packet/img/tabbar-right.png');
}
.yuyintupian{
  width: 141rpx;
  height: 105rpx;
  position: fixed;
  background: rgba(0, 0, 0, .3);
  top: 50%;
  left: 50%;
  margin-top: -70rpx;
  margin-left: -94rpx;
  background-size: 141rpx 105rpx;
  background-position: center bottom;
}

.prestrain{
  width: 0;
  height: 0;
}
